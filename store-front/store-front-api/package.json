{
    "name": "fs-nanodegree",
    "version": "1.0.0",
    "main": "src/index.ts",
    "license": "MIT",
    "author": "Ahmad Ghallab",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon src/index.ts",
        "watch": "tsc-watch --esModuleInterop src/index.ts --outDir ./dist --onSuccess \"node ./dist/index.js\"",
        "migration": "db-migrate",
        "clean": "rm -rf dist/ || true",
        "build": "npm install . && npm run clean && tsc && cp -R .elasticbeanstalk dist/.elasticbeanstalk && cp package.json dist/package.json && cd dist && zip -r Archive.zip . && cd ..",
        "lint": "eslint src/**/*.ts",
        "lint:f": "eslint src/**/*.ts --fix",
        "test": "export ENV=test && db-migrate --env test up && yarn build && yarn jasmine && db-migrate db:drop test",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "deploy": "yarn build && eb list && eb use store-front-api-dev && eb deploy"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-session": "^2.0.44",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/express-validator": "^3.0.0",
        "@types/jasmine": "^4.3.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.7.23",
        "@types/pg": "^8.6.5",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jasmine": "^4.4.0",
        "jasmine-spec-reporter": "^7.0.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4",
        "ts-node": "^10.9.1",
        "tsc-watch": "^5.0.3",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.0",
        "cookie-session": "^2.0.0",
        "cors": "^2.8.5",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "express-validator": "^6.14.2",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.8.0"
    }
}
